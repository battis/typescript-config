{
  "name": "@battis/typescript-config",
  "homepage": "https://github.com/battis/typescript-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/battis/typescript-config.git"
  },
  "license": "GPL-3.0",
  "author": {
    "name": "Seth Battis",
    "url": "https://github.com/battis"
  },
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:paths": "monorepo-package-paths -w --author --homepage --repository",
    "build:compile": "lerna run build",
    "release": "run-s release:*",
    "release:build": "run-s build",
    "release:main": "git push --follow-tags; git checkout main; git merge dev; git push",
    "release:publish": "pnpm publish -r --access public",
    "release:dev": "git checkout dev"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": "@battis/eslint-config"
  },
  "devDependencies": {
    "@battis/eslint-config": "workspace:^",
    "@battis/prettier-config": "workspace:^",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-pnpm-scopes": "^19.9.1",
    "lerna": "^9.0.3",
    "monorepo-package-paths": "workspace:*",
    "npm-run-all": "^4.1.5"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
